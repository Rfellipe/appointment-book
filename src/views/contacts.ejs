<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Appointment Book</h1>
      <p class="text-center lead">Create Contacts</p>

      <%- include('includes/messages') %>

      <div class="col-lg">

        <% if(contact._id) { %>
        <form action="/contacts/edit/<%= contact._id %>" method="POST">
        <% } else { %>
        <form action="/contacts/register" method="POST">
        <% } %>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

            <div class="form-group">
              <label>Name</label>
              <input value="<%= contact.name %>" type="name" class="form-control" name="name">
            </div>

            <div class="form-group">
              <label>Surname</label>
              <input value="<%= contact.surname %>" type="surname" class="form-control" name="surname">
            </div>

            <div class="form-group">
              <label>Phone</label>
              <input value="<%= contact.tel %>" type="tel" class="form-control" name="tel">
            </div>

            <div class="form-group">
              <label>E-mail</label>
              <input value="<%= contact.email %>" type="email" class="form-control" name="email">
            </div>

            <button type="submit" class="btn btn-primary">Create a contact</button>
        </form>

    </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>